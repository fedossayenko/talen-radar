# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/talent_radar
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000

# AI Services
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MODEL_DEFAULT=anthropic/claude-3-haiku
AI_RATE_LIMIT=10
AI_TIMEOUT=30000

# Web Scraping Configuration
PLAYWRIGHT_HEADLESS=true
SCRAPER_CONCURRENCY=3
SCRAPER_RATE_LIMIT=1000
SCRAPER_USER_AGENT=TalentRadar/1.0

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@talentradar.app

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBSOCKETS=true

# API Configuration
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Services
LINKEDIN_SCRAPER_ENABLED=false
GLASSDOOR_API_KEY=
CRUNCHBASE_API_KEY=

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PROFILING=false