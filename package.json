{
  "name": "talent-radar",
  "version": "0.1.0",
  "description": "AI-powered job tracking and application system for IT developers",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:api",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "echo 'Web app not implemented yet'",
    "dev:scraper": "cd apps/api && bun run start:scraper",
    "build": "bun run build:api",
    "build:api": "cd apps/api && bun run build",
    "build:web": "echo 'Web app not implemented yet'",
    "start": "bun run start:api",
    "start:api": "cd apps/api && bun run start",
    "start:web": "echo 'Web app not implemented yet'",
    "test": "bun run test:api",
    "test:api": "cd apps/api && bun run test",
    "test:e2e": "cd apps/api && bun run test:e2e",
    "test:web": "echo 'Web app not implemented yet'",
    "lint": "bun run lint:api",
    "lint:api": "cd apps/api && bun run lint",
    "lint:web": "echo 'Web app not implemented yet'",
    "lint:fix": "bun run lint:fix:api",
    "lint:fix:api": "cd apps/api && bun run lint:fix",
    "lint:fix:web": "echo 'Web app not implemented yet'",
    "type-check": "bun run type-check:api",
    "type-check:api": "cd apps/api && bun run type-check",
    "type-check:web": "echo 'Web app not implemented yet'",
    "db:generate": "cd apps/api && bun run db:generate",
    "db:migrate": "cd apps/api && bun run db:migrate",
    "db:studio": "cd apps/api && bun run db:studio",
    "db:seed": "cd apps/api && bun run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "setup": "bun install && bun run db:generate && bun run db:migrate",
    "clean": "bun run --filter='*' clean",
    "reset": "bun run clean && rm -rf node_modules && bun install"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/talent-radar.git"
  },
  "keywords": [
    "job-search",
    "ai",
    "web-scraping",
    "career",
    "recruitment",
    "typescript",
    "nestjs",
    "nextjs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}