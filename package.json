{
  "name": "talent-radar",
  "version": "0.1.0",
  "description": "AI-powered job tracking and application system for IT developers",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:api",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:scraper": "cd apps/api && npm run start:scraper",
    "build": "npm run build:api",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "start": "npm run start:api",
    "start:api": "cd apps/api && npm run start",
    "start:web": "cd apps/web && npm run preview",
    "test": "npm run test:api",
    "test:api": "cd apps/api && npm run test",
    "test:e2e": "cd apps/api && npm run test:e2e",
    "test:web": "cd apps/web && npm run test",
    "test:e2e:web": "cd apps/web && npm run test:e2e",
    "lint": "npm run lint:api",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:fix": "npm run lint:fix:api",
    "lint:fix:api": "cd apps/api && npm run lint:fix",
    "lint:fix:web": "cd apps/web && npm run lint:fix",
    "type-check": "npm run type-check:api",
    "type-check:api": "cd apps/api && npm run type-check",
    "type-check:web": "cd apps/web && npm run type-check",
    "db:generate": "cd apps/api && npm run db:generate",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:studio": "cd apps/api && npm run db:studio",
    "db:seed": "cd apps/api && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "setup": "npm install && npm run db:generate && npm run db:migrate",
    "clean": "npm run --workspaces clean",
    "reset": "npm run clean && rm -rf node_modules && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/talent-radar.git"
  },
  "keywords": [
    "job-search",
    "ai",
    "web-scraping",
    "career",
    "recruitment",
    "typescript",
    "nestjs",
    "nextjs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}