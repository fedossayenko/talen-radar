AI_SERVICE_ENABLED=true
AI_TIMEOUT=60000
AI_MAX_RETRIES=3
AI_ENABLE_CACHING=true
AI_CACHE_EXPIRY_HOURS=24
AI_MAX_CONTENT_LENGTH=10000

# Scraper Configuration
